generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")

}
enum AccountType {
  INDIVIDUAL
  COMPANY
}
enum VideoStatus {
  PROCESSING
  READY
  PENDING
  FAILED
}

enum VideoVisibleStatus{
PUBLIC
PRIVATE

}
model User {
  id        String     @id @default(cuid())
  email     String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Optional profile fields
  accountType   AccountType @default(INDIVIDUAL)

  username String @unique
  name          String?
  image         String?
  emailVerified Boolean @default(false)

  // Better Auth Admin plugin fields
  role       String    @default("user")
  banned     Boolean   @default(false)
  banReason  String?
  banExpires DateTime?

  // Relations
  videos     Video[]
  comments   Comment[]
  videoLikes VideoLike[]

  // Follow relations
  followers  Follow[] @relation("Following")
  following  Follow[] @relation("Follower")

  // Better Auth relations
  sessions Session[] @relation("UserSessions")
  accounts Account[] @relation("UserAccounts")

  @@map("users")
}

// --- BETTER AUTH TABLES ---
model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation("UserSessions", fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?

  // Better Auth Admin plugin field
  impersonatedBy String?

  @@index([userId])
  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  user                  User      @relation("UserAccounts", fields: [userId], references: [id], onDelete: Cascade)
  providerId            String
  accountId             String    @unique
  accessToken           String?
  refreshToken          String?
  idToken               String?
  scope                 String?
  expiresAt             DateTime?

  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verifications")
}

model Video {
  id            String             @id @default(cuid())
  userId        String
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)


  bunnyVideoId String? @unique
  bunnyLibraryId String?

  title         String
  description   String?
  thumbnailKey  String?
  duration      Int?
  visibility    VideoVisibleStatus @default(PUBLIC)
  status        VideoStatus        @default(PROCESSING)
  category      String?
  tags          String[]           @default([])

  viewCount     BigInt             @default(0)
  likeCount     Int                @default(0)
  commentCount  Int                @default(0)
  createdAt     DateTime           @default(now())

  comments      Comment[]
  likes         VideoLike[]

  @@index([userId])
  @@index([status])
  @@index([createdAt(sort: Desc)])
}

model Comment {
  id        String   @id @default(cuid())
  videoId   String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  content   String
  likeCount Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([videoId])
  @@index([createdAt(sort: Desc)])
}

model VideoLike {
  videoId   String   // Changed to String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@id([videoId, userId])  // Composite key, removed autoincrement
  @@index([videoId])
  @@index([userId])
}

model Follow {
  followerId  String
  follower    User     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  followingId String
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@id([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}
